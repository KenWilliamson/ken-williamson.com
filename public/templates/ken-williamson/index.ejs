<!DOCTYPE html>
<html>
   <% include head%> 
    <body>
<!-- Ulbora CMS Template and theme -->
        <div class="top-menu">
            <div class="top-menu-space">
                <div class="logo">Ken Williamson</div>
                <div class="logo-img"><img alt="Ken-Williamson.com" src="img/kwilliamson_1.5.jpeg"/></div>

            </div>
            <div class="top-menu-menu">
                <nav>
                    <ul>
                        <li class="activeLink"><a href="/">Home</a></li>                        
                        <% for(var i=0; i<content.articleLocations.TopMenu.length; i++) {%>  
                            <li><a href="/article?id=<%= content.articleLocations.TopMenu[i]._id %>"><%= content.articleLocations.TopMenu[i].title %></a></li>           
                            
                        <% } %>  
                        <%if (loggedIn) { %>
                            <li><a class="" href="/logout">Logout</a></li>
                        <% }else{ %>
                            <li class=""><a  href="/login">Login</a></li>
                        <% } %>
                    </ul>
                </nav>

            </div>
        </div>   
        <div id="container" class="container">  
            <div class="page-wrapper">
                <div class="article-wrapper-inline">
                    <% for(var i=0; i<content.articleLocations.FrontPage.length; i++) {%>                
                        <div class="article-wrapper2">
                            <%if (content.articleLocations.FrontPage[i].showTitle) { %>
                                <div class="article-title"><%= content.articleLocations.FrontPage[i].title %></div>
                            <% } %>
                    
                            <div class="article">
                                <%- content.articleLocations.FrontPage[i].articleText.text %>
                            </div> 
                            <%if (!content.articleLocations.FrontPage[i].fullPage) { %>
                                <div class="article-read-more"><a class="" href="/article?id=<%= content.articleLocations.FrontPage[i]._id %>">Read More...</a></div>
                            <% } %>
                            <% if(content.articleLocations.FrontPage[i].fullPage && content.articleLocations.FrontPage[i].allowComments){ %>
                                <div class="comment-link"><a class="" href="/article?id=<%= content.articleLocations.FrontPage[i]._id %>">Comments...</a></div>
                            <% } %>
                        </div>

                    <% } %>  
                </div>  
                <div class="archive-wrapper-inline">
                    <div class="archive-wrapper">
                        <div class="archive-label">
                            Archives
                        </div>
                        <% for(var i=0; i<content.dates.length; i++) {%>    
                            <div>
                                <a class="" href="archive.html?month=<%= content.dates[i].month %>&year=<%= content.dates[i].year %>"><%= content.dates[i].dateLabel %></a>
                            </div>
                        <% } %>
                    </div>
                </div>
            </div>
        </div> 
        <div class="footer-long">
            Copyright 2014 Ken Williamson | Powered by <a href="http://www.ulboracms.org">Ulbora CMS</a>
        </div>      
    </body>
</html>
